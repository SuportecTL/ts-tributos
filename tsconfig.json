{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,            
    "target": "es5",               
    "module": "commonjs",            
    "declaration": true,         
    "outDir": "lib",               
    "esModuleInterop": true,      
    "skipLibCheck": true,          
    "forceConsistentCasingInFileNames": true 
  },
  "include": [
    "src"
  ]
}
